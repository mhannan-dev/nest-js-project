# EditorConfig is awesome: https://editorconfig.org

# Root configuration
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Match JSON files
[*.json]
indent_style = space
indent_size = 2

# Match YAML files (e.g., NestJS configuration files)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Match Markdown files
[*.md]
trim_trailing_whitespace = false

# Match TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# Match JavaScript files
[*.js]
indent_style = space
indent_size = 2

# Match configuration files
[*.{prettierrc,eslintrc}]
indent_style = space
indent_size = 2

# Ignore generated files (e.g., build artifacts)
[dist/**]
insert_final_newline = false
trim_trailing_whitespace = false
